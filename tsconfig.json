{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@altv", "./types"]
  },
  "include": [
    "src",
    "types/types.d.ts",
    "types/server.globals.d.ts",
    "types/client.globals.d.ts",
    "types/webview.globals.d.ts"
  ],
  "exclude": ["node_modules", "dist", "cache", "data", "resources", "modules"]
}
